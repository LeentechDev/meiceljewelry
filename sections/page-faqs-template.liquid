            {% for block in section.blocks %}
              <div class="faqs-question">
                <div class="faqs-icon-q">
                  <h1>Q.</h1>
                </div>
                <div class="faqs-body-q">
                  <h4>{{block.settings.faq_title}}</h4>
                </div>
              </div>
              <div class="faqs-answer">
                <div class="faqs-icon-a">
                  <h1>A.</h1>
