/*  CUSTOM STYLE */
.header-v2 {
    padding-top: 0;
    .topbar{
        padding: 15px 0;
        color: #fff;
        background-color: #FC3F93;
    }
    .topbar-right{
        background-color: #0000;
    }
}
#header .searchform input {
    border-radius: 0 !important;
}
.label-cart {
    color: #fff;
    background-color: #FC3F93;
}
.slider-home-classic {
    padding-top: 0 !important;
}
.topbar-account{
    color: #fff !important;
}
.navbar-nav.menu-main {
    width: 100%;
    display: flex;
}
.menu-main {
    li {
        flex-grow: 1;
    }
}
.h-banner-right {
    margin-left: 50px;
}
.collection_categories .content_collection .collection:first-child{
    padding: 15px;
}
h5.text-animate-3.text-banner5.margin_bottom_30 {
    width: 500px;
    margin: 15px 0;
}
a.btn-slider.btn-banner5 {
    padding: 10px 30px;
    border: 1px solid #393D47;
    background-color: #393D47;
    color: #fff;
}
.slider-home-classic .text-slider {
    bottom: 40%;
}
.line-tes {
    display: none;
}
.BG-section.Testimonal {
    background: #FAFAFA;
    padding: 60px;
}
.margin_bottom_80 {
    margin-bottom: 0;
}
.collection_categories .banner-collection .text_collection {
    bottom: 50px;
    left: 10%;
}
.h-collection-btn {
    border: 1px solid #4A4D50;
    padding: 12px 26px;
}
.btn-section {
    color: #4A4D50;
    background-color: #fff;
    border: 1px solid #4A4D50;
    border-radius: 0;
}
.banner_minimal .text-banner a {
    color: #fff !important;
    padding: 12px 26px;
    background-color: #393D47;
}
.container-fluid.margin_bottom_80.banner_modern {
    display: none;
}
.h-article-holder {
    display: flex;
    flex-wrap: wrap;
    flex-direction: row-reverse;
    .h-article-mobile-header {
        display: none;
    }
    .h-article-items {
        width: 33.3%;
        padding: 20px;
    }
    .h-article-date {
        text-transform: uppercase;
    }
    .h-article-btn {
        width: 33.3%;
        height: 300px;
        padding: 20px;
    }
}
.footer-v4 {
    padding: 0;
    form input {
        width: 50%;
        border: 1px solid #C1C1C1;
        padding: 8px 10px;
    }
    form button {
        padding: 18px;
        background-color: #393D47;
        color: #fff;
        font-size: 15px;
        margin-left: 5px;
    }
}
.bottom-footer {
    border-top: 1px solid #DCDCDC;
    margin-top: 10px;
    padding: 15px 0;
    .bottom-holder {
        display: flex;
        flex-wrap: wrap;
        .btm-footer-left {
            width: 50%;
            text-align: left;
            a {
                color: #000000;
                
                &:hover {
                    color: #FC3F93;
                }
            }
        }
        .btm-footer-right {
            width: 50%;
            text-align: right;
            a {
                color: #000000;
                
                &:hover {
                    color: #FC3F93;
                }
            }
        }
    }
}
@media screen and (max-width:992px){
    .slider-home-classic .text-slider {
        bottom: 20%;
    }
    .slick-Testimonal .content-comment {
        padding: 0 !important;
    }
    h5.text-animate-3.text-banner5.margin_bottom_30 {
        display: none;
    }
    .h-banner-right {
        margin-left: 0px;
    }
    .h-cl-mb {
        margin: 20px 0;
    }
    .container-fluid.margin_bottom_80.banner_modern {
        display: block;
    }
    .banner_minimal.relative {
        display: none;
    }
    .banner_modern .img_banner .absolute .btn_banner {
        padding: 15px 30px;
        font-size: 10px;
    }
    .BG-section.Testimonal {
        padding: 30px 10px;
    }
    .h-article-holder {
        flex-direction: column;
        .h-article-mobile-header {
            display: block;
            font-size: 15px;
        }
        .h-article-items {
            width: 100%;
            padding: 0;
        }
        .h-article-btn {
            width: 100%;
            height: 150px;
            h1 {
                display: none;
            }
        }
        .h-article-promo {
            text-align: center;
        }
    }
}